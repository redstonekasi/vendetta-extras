{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
